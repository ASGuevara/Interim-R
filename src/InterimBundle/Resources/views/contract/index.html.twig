{% extends "@Interim/Default/layout.html.twig" %}

{% block content %}
    <h1>Liste des contrats</h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td scope="col"><a href="{{ path('contract_show', { 'id': contract.id }) }}">{{ contract.id }}</a></td>
                <td scope="col">{% if contract.startDate %}{{ contract.startDate|date('Y-m-d') }}{% endif %}</td>
                <td scope="col">{% if contract.endDate %}{{ contract.endDate|date('Y-m-d') }}{% endif %}</td>
                <td scope="col">{{ contract.status }}</td>
                <td scope="col">
                    <a href="{{ path('contract_show', { 'id': contract.id }) }}" class="btn btn-warning">Voir</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contract_new') }}"  class="btn btn-primary">Créer un nouveau contrat</a>

{% endblock %}
